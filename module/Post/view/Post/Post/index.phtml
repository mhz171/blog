<?php if ($this->isLoggedIn): ?>
    <h3><?php echo $this->user->getUsername(); ?> logined!</h3>
<?php else: ?>
    <p>No user logged in.</p>
<?php endif; ?>
<h1>Posts</h1>

<?php if ($this->isLoggedIn): ?>
    <p>
        <a href="<?= $this->url('post', ['action' => 'add']) ?>">Add new post</a>
    </p>
<?php endif; ?>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Username</th>
        <th>Created At (Jalali)</th>
        <th>Image</th>
    </tr>
    </thead>
    <tbody>

    <?php foreach ($this->posts as $post): ?>
        <tr>
            <td><?= $this->escapeHtml($post['title']); ?></td>
            <td><?= $this->escapeHtml($post['description']); ?></td>
            <td><?= $this->escapeHtml($post['username']); ?></td>
            <td><?= $this->escapeHtml($post['created_at']); ?></td>
            <td>
                <?php if (!empty($post['image'])) : ?>
                    <img src="<?= $this->escapeHtmlAttr($this->basePath(substr($post['image'], 8))) ?>"
                         alt="<?= $this->escapeHtmlAttr($post['title']) ?>" width="100">
                <?php endif; ?>
            </td>
            <?php if ($this->isLoggedIn && $this->user->getId() == $post['user_id']) : ?>
                <td>
                    <a href="<?= $this->url('post', ['action' => 'edit', 'id' => $post['post_id']]) ?>">Edit</a>
                    <a href="<?= $this->url('post', ['action' => 'delete', 'id' => $post['post_id']]) ?>">Delete</a>
                </td>
            <?php else : ?>
                <td>Can't Change</td>
            <?php endif; ?>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>

<?php if ($this->totalPages > 1) : ?>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <?php if ($this->currentPage > 1) : ?>
                <li class="page-item">
                    <a class="page-link"
                       href="<?= $this->url('post', [], ['query' => ['page' => $this->currentPage - 1]]) ?>"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            <?php endif; ?>

            <?php for ($i = 1; $i <= $this->totalPages; $i++) : ?>
                <li class="page-item <?= ($i == $this->currentPage) ? 'active' : '' ?>">
                    <a class="page-link" href="<?= $this->url('post', [], ['query' => ['page' => $i]]) ?>"><?= $i ?></a>
                </li>
            <?php endfor; ?>

            <?php if ($this->currentPage < $this->totalPages) : ?>
                <li class="page-item">
                    <a class="page-link"
                       href="<?= $this->url('post', [], ['query' => ['page' => $this->currentPage + 1]]) ?>"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            <?php endif; ?>
        </ul>
    </nav>
<?php endif; ?>



