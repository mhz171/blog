<?php

$title = 'My posts';
$this->headTitle($title);
?>
<h1><?= $this->escapeHtml($title) ?></h1>
<p>
    <a href="<?= $this->url('post', ['action' => 'add']) ?>">Add new post</a>
</p>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Created Time</th>
        <th>Author</th>
        <th>Image</th>
        <th>&nbsp;</th>
    </tr>

    <?php foreach ($posts as $post) : ?>
        <tr>
            <td><?= $this->escapeHtml($post->title) ?></td>
            <td><?= $this->escapeHtml($post->description) ?></td>
            <td><?= $this->escapeHtml($post->created_at) ?></td>
            <td><?= $this->escapeHtml($post->user) ?></td>
            <td>
                <?php if (!empty($post->image)) : ?>
<!--                    <td>--><?php //=$this->escapeHtml($this->basePath(substr($post->image, 8))) ?><!--</td>-->
                    <img src=".<?= $this->basePath(substr($post->image, 8)) ?>" alt="<?= $this->escapeHtmlAttr($post->title) ?>" width="100">
                <?php endif; ?>
            </td>
            <td>
                <a href="<?= $this->url('post', ['action' => 'edit', 'id' => $post->id]) ?>">Edit</a>
                <a href="<?= $this->url('post', ['action' => 'delete', 'id' => $post->id]) ?>">Delete</a>
            </td>
        </tr>
    <?php endforeach; ?>
</table>
